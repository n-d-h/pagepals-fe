{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["standard", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"globals": {
		"_": "readonly"
	},
	"rules": {
		"react/react-in-jsx-scope": "off",
		"semi": ["error", "always"],
		"no-tabs": 0,
		"no-mixed-spaces-and-tabs": 0,
		"react/prop-types": "off",
		"comma-dangle": ["error", "always-multiline"],
		"semi-style": ["error", "last"]
	}
}
